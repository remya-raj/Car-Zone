<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/viewBgCarCard"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_blue_round_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="@id/viewBgCarCard"
        app:layout_constraintTop_toTopOf="@id/viewBgCarCard" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/ivCar"
        app:layout_constraintTop_toTopOf="@id/viewBgCarCard"
        app:layout_constraintEnd_toEndOf="@id/viewBgCarCard"
        tools:text="Aston Martin" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toEndOf="@id/ivCar"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="@id/viewBgCarCard"
        tools:text="KA05LP5577" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/ivCar"
        app:layout_constraintTop_toBottomOf="@id/tvNumber"
        app:layout_constraintEnd_toEndOf="@id/viewBgCarCard"
        tools:text="Automatic - Petrol" />

</androidx.constraintlayout.widget.ConstraintLayout>